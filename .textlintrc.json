{
  "plugins": {},
  "filters": {},
  "rules": {
    "@proofdict/proofdict": {
        "dictURL": "https://gsy0911.github.io/proof-dictionary/"
    },
    "prh": {
      "rulePaths": ["rules.yml"]
    },
    "preset-ja-spacing": false,
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "allowPeriodMarks": [":", "略）"]
      },
      "max-comma": false,
      "no-doubled-joshi": {
         "strict": false,
         "allow": ["か", "が"]
      },
      "no-exclamation-question-mark": {
         "allow": [
          "![",
           "！",
           "？"
         ]
      },
      "sentence-length": false,
      "ja-no-weak-phrase": false
    },
    "spellcheck-tech-word": false
  }
}
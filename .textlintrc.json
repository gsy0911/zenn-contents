{
  "plugins": {},
  "filters": {},
  "rules": {
    "@proofdict/proofdict": {
        "dictURL": "https://gsy0911.github.io/proof-dictionary/"
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "never"
      }
    },
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "allowPeriodMarks": [":::", "（前略）", "（中略）", "（後略）"]
      },
      "no-exclamation-question-mark": {
         "allow": [
          "![",
           "！",
           "？"
         ]
      },
      "sentence-length": {
        "max": 150
      },
      "ja-no-weak-phrase": false
    },
    "spellcheck-tech-word": false
  }
}
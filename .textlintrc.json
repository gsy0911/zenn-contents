{
  "plugins": {},
  "filters": {},
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "never"
      }
    },
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "allowPeriodMarks": [":::", "（前略）", "（中略）", "（後略）"]
      },
      "no-exclamation-question-mark": {
         "allow": [
          "![",
           "！",
           "？"
         ]
      },
      "sentence-length": {
        "max": 150
      }
    },
    "spellcheck-tech-word": true
  }
}